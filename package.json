{
    "name": "ldes-connectors",
    "repository": "https://github.com/TREEcg/connectors",
    "scripts": {
        "build-changed": "lerna run build --since HEAD",
        "build": "npm run build:ts",
        "build:ts": "tsc",
        "eslint": "eslint . --ext ts",
        "test": "npm run build && jest --coverageThreshold '{}'",
        "eslint:cache": "npm run eslint -- --cache",
        "lint": "npm run eslint",
        "lint:fix": "npm run eslint -- --fix",
        "clean": "rm -rf ./node_modules && rm -rf ./packages/*/node_modules",
        "prepare": "husky install",
        "postinstall": "npm run bootstrap",
        "bootstrap": "lerna bootstrap",
        "lerna": "lerna",
        "watch": "tsc && tsc -w"
    },
    "publishConfig": {
        "access": "public"
    },
    "jest": {
        "preset": "ts-jest",
        "globals": {
            "ts-jest": {
                "tsconfig": "tsconfig.json"
            }
        },
        "transform": {
            "^.+\\.ts$": "ts-jest"
        },
        "testRegex": "(/test/.*|(\\\\.|/)(test|spec))Test.(ts|js)$",
        "moduleFileExtensions": [
            "ts",
            "js"
        ],
        "collectCoverage": true,
        "coveragePathIgnorePatterns": [
            "/node_modules/",
            "/mocks/",
            "index.js"
        ],
        "testEnvironment": "node",
        "coverageThreshold": {
            "global": {
                "branches": 100,
                "functions": 100,
                "lines": 100,
                "statements": 100
            }
        }
    },
    "devDependencies": {
        "componentsjs-generator": "^2.6",
        "@rdfjs/types": "^1.1",
        "@types/chai": "^4.2.22",
        "@types/chai-as-promised": "^7.1.4",
        "@types/jest": "^27.0.3",
        "@types/node": "^16.11.1",
        "@types/node-fetch": "^3.0.3",
        "chai": "^4.3.4",
        "chai-as-promised": "^7.1.1",
        "eslint": "^7.32.0",
        "eslint-config-es": "^3.30.15",
        "eslint-import-resolver-typescript": "^2.5.0",
        "eslint-plugin-import": "^2.25.2",
        "eslint-plugin-tsdoc": "^0.2.14",
        "eslint-plugin-unused-imports": "^1.1.5",
        "jest": "^28.1.0",
        "lerna": "^4.0.0",
        "nyc": "^15.1.0",
        "rdf-data-factory": "^1.1.0",
        "ts-jest": "^28.0.3",
        "ts-node": "^10.3.0",
        "typescript": "^4.4.4"
    },
    "dependencies": {
        "@treecg/types": "0.1.1",
        "husky": "^7.0.4",
        "winston": "^3.3.3"
    }
}
